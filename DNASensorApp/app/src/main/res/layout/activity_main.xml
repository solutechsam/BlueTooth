<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samop.dnasensorapp.MainActivity">

    <Button
        android:id="@+id/finddevicesbutton"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:text="Find Devices"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/devicelistview"
        android:layout_width="340dp"
        android:layout_height="117dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/finddevicesbutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Connectbutton"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:text="Connect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/devicelistview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Getresultsbutton"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:text="Get Results"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Connectbutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/resultstextView"
        android:layout_width="356dp"
        android:layout_height="173dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Getresultsbutton"
        app:layout_constraintVertical_bias="0.011"
        app:layout_constraintHorizontal_bias="0.517" />


</android.support.constraint.ConstraintLayout>
